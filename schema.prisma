generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Todo {
  id           Int      @id @default(autoincrement())
  text         String
  isDone       Boolean  @default(false)
  createdAt    DateTime @default(now())
  authorEmail  String?
  authorName   String?
  authorAvatar String?
}
